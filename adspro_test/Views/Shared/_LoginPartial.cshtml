@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav mr-auto" >
        <li class="nav-item">
            <a href="/Manage" title="Manage" class="nav-link">Hello @User.Identity.GetUserName()</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <a href="/Account/Register" id="registerLink" class="nav-link">Register</a>
        </li>
        <li class="nav-item">
            <a href="/Account/Login" id="loginLink" class="nav-link">Log in</a>
        </li>  
    </ul>
}
